<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/md_list_item_height">

        <Button
            android:id="@+id/wheel_select_btn_left"
            style="@style/TextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/md_btn_selector"
            android:gravity="center"
            android:text="@string/cancel"/>

        <TextView
            android:id="@+id/wheel_select_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/please_select_a_region"/>

        <Button
            android:id="@+id/wheel_select_btn_right"
            style="@style/TextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/md_btn_selector"
            android:gravity="center"
            android:text="@string/sure"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_white"
        android:orientation="horizontal"
        android:padding="20dp">

        <com.lihonghao.library.widgets.wheel.view.WheelView
            android:id="@+id/wheel_select_province"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"/>

        <com.lihonghao.library.widgets.wheel.view.WheelView
            android:id="@+id/wheel_select_city"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"/>

        <com.lihonghao.library.widgets.wheel.view.WheelView
            android:id="@+id/wheel_select_area"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"/>

    </LinearLayout>

</LinearLayout>