<resources>

    <style name="BaseTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">?attr/theme_color</item>
        <item name="android:colorPrimaryDark">?attr/theme_color</item>
        <item name="android:colorAccent">?attr/theme_color</item>
        <item name="flat_text">@drawable/md_btn_selector</item>
