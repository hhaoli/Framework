<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="hintText">
        <item name="android:textColor">@drawable/md_item_selector</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextTitle">
        <item name="android:textColor">?attr/text_title</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextSubhead">
        <item name="android:textColor">?attr/text_subhead</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextBody">
        <item name="android:textColor">?attr/text_body</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextTitle.Inverse">
        <item name="android:textColor">@color/text_100_inverse</item>
    </style>

    <style name="TextSubhead.Inverse">
        <item name="android:textColor">@color/text_54_inverse</item>
    </style>

    <style name="TextBody.Inverse">
        <item name="android:textColor">@color/text_87_inverse</item>
    </style>

    <style name="LoadingProgressBar">
        android:indeterminateDrawable="@drawable/loading_bar1
    </style>
</resources>